<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <TextView
        android:id="@+id/meme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEME NAME"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/meme_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/meme_name"
        android:text="123"
        android:textSize="15sp"/>



    <com.robinhood.spark.SparkView
        android:id="@+id/meme_sparkline"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="8dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:layout_below="@id/meme_price"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/meme_sparkline"
        android:layout_below="@+id/meme_sparkline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/meme_transactions"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




            </ListView>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>